<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
        <div class="flex  items justify-end">
            <!-- <a class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block" >Log out</a> -->
            <a class="bg-red-500 rounded-md px-3 py-2 text-sm mb-5 inline-block" href="/logout">Log out</a>
        </div>
        <h3 class="text-3xl mb">Hello,<%= user.username %> ‚úåÔ∏èüöÄ </h3>
        <h5 class="mb-5">You can Do it!!!</h5>
        <form action="/post" method="post">
            <textarea placeholder="What's in you'r mind ?" class="p-3 w-1/3 resize-none bg-transparent border-2 border-zinc-800 rounded-md"  name="content"></textarea>
            <input class="px-3 w-40 py-2 bg-blue-500 rounded-md block  mt-2" type="submit" value="Create New Post">
        </form>
        <div class="posts mt-20">
            <h3 class="text-zinc-400" >Your Posts.</h3>
        <div class="postcontainer mt-5">
            <% user.posts.reverse().forEach(function(post) { %>
              <div class="post w-1/3 p-4 mb-4 border-2 border-zinc-800 rounded-md mt-5">
                  <h4 class="text-blue-500">@<%= user.username %></h4>
                  <p class="text-sm tracking-tight"><%= post.content %></p>
                  <div class="btns flex gap-4 mt-5">
                      <a class="text-blue-500" href="/like/<%= post._id %>">
                        Like (<%= post.likes.length %>)
                      </a>
                      <a class="text-zinc-400" href="/edit/<%= post._id %>">Edit</a>
                  </div>
              </div>
            <% }) %>
        </div>

        </div>
    </div> 
  </body>
</html> 
